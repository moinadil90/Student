<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel1"
    android:background="@drawable/backrepeatmaths"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MathsActivity"
    tools:showIn="@layout/activity_maths">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:paddingTop="10dp"
        android:id="@+id/l1"
        android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:text="Maths"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/l2"
        android:layout_below="@+id/l1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 2"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"/>
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_weight="1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Level 3"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/l3"
        android:layout_below="@+id/l2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:gravity="center"
            android:id="@+id/text3"
            android:text="You need 125 more points to reach Level 3"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="70dp"
            android:id="@+id/l4"
            android:layout_below="@+id/l3"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shadow"
                android:paddingTop="20dp"
                android:id="@+id/view1"
                android:gravity="center"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/rel3"
            android:layout_below="@+id/l4">
            <View
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerInParent="true"
                android:id="@+id/dummy"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text1"
                android:layout_toLeftOf="@+id/dummy"
                android:gravity="center"
                android:background="@drawable/circle"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:text="175 Points"
                android:textSize="15sp"
                android:textColor="@color/colorWhite"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1"
                android:gravity="center"
                android:layout_toLeftOf="@+id/dummy"
                android:paddingTop="5dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:text="MATHS"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dummy"
                android:id="@+id/name"
                android:textSize="15sp"
                android:text="AMRUTH BR"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dummy"
                android:id="@+id/email"
                android:textSize="15sp"
                android:layout_below="@id/name"
                android:text="amruth@gmail.com"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dummy"
                android:id="@+id/level"
                android:textSize="15sp"
                android:layout_below="@id/email"
                android:text="Level: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dummy"
                android:id="@+id/points"
                android:textSize="15sp"
                android:layout_below="@id/level"
                android:text="Points: "/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dummy"
                android:id="@+id/questions"
                android:textSize="15sp"
                android:layout_below="@id/points"
                android:text="Questions: "/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/dummy"
                android:id="@+id/accuracy"
                android:textSize="15sp"
                android:layout_below="@id/questions"
                android:text="Accuracy: "/>
        </RelativeLayout>
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/l5"
        android:layout_below="@+id/rel3">
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow"
            android:paddingTop="20dp"
            android:gravity="center"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/play"
            android:layout_width="0px"
            android:layout_weight=".99"
            android:layout_gravity="left"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="PLAY"
            android:textStyle="bold"
            style="@style/Button"/>
        <View
            android:layout_width="0px"
            android:layout_weight=".02"
            android:layout_height="match_parent"></View>
        <Button
            android:id="@+id/challenge"
            android:layout_width="0px"
            android:layout_gravity="right"
            android:layout_weight=".99"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="CHALLENGE"
            android:textStyle="bold"
            style="@style/Button"/>

    </LinearLayout>


</RelativeLayout>
