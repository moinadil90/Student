<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="PopupMenu" parent="android:Widget.Holo.Light.PopupMenu">
    </style>
    <!--Button Style -->

    <style name="foodRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">@dimen/bottom_button_text</item>
        <item name="android:background">@color/color9</item>
    </style>

    <style name="ButtonInactive">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">@dimen/bottom_button_text</item>
        <item name="android:background">@color/colorAccentLight</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">@dimen/bottom_button_text</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">
        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textSize">@dimen/navigation_header_text</item>
        <item name="android:gravity">left</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">bottom</item>
    </style>

    <style name="StarRatingBar" parent="@android:style/Widget.RatingBar">

        <item name="android:minHeight">36dp</item>
        <item name="android:numStars">5</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:rating">4.0</item>
        <item name="android:maxHeight">36dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/heading_login_sign_up</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="MyCustomTabTextTeachingActivity" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/method_detail_activity_size</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyCustomTabTextPedagogy" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/pedagogy_text</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>
</resources>
